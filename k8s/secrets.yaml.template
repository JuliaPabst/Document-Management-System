# k8s/secrets.yaml.template
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
type: Opaque
stringData:
  # Database
  postgres-user: postgres
  postgres-password: your-password-here

  # RabbitMQ
  rabbitmq-user: guest
  rabbitmq-password: your-password-here

  # MinIO
  minio-root-user: admin
  minio-root-password: your-password-here
  minio-access-key: admin
  minio-secret-key: your-password-here

  # OpenAI Key
  openai-api-key: your-openai-api-key-here

  # PgAdmin
  pgadmin-email: admin@admin.com
  pgadmin-password: your-password-here

  # Grafana
  grafana-admin-user: admin
  grafana-admin-password: your-password-here